# Copy to secrets.env and replace with your credentials.
MS_CLIENT_ID=00000000-0000-0000-0000-000000000000
MS_TENANT_ID=00000000-0000-0000-0000-000000000000
MS_GRAPH_USER_ID=user@yourdomain.com
OPENAI_API_KEY=your-openai-api-key
GOOGLE_SERVICE_ACCOUNT_FILE=/absolute/path/to/service-account-key.json

# For application permissions (client credentials) uncomment and set:
# MS_CLIENT_SECRET=your-ms-client-secret
# MS_AUTH_MODE=client_credentials

# For delegated/device-code authentication uncomment and set:
# MS_AUTH_MODE=device_code
# MS_TOKEN_CACHE_FILE=.ms_token_cache.json
# MS_DELEGATED_SCOPES=Mail.ReadWrite offline_access

# Optional overrides
# OUTLOOK_TRIGGER_CATEGORY=AI Summarize
# OUTLOOK_PROCESSED_CATEGORY=AI Summarized
# OUTLOOK_FETCH_LIMIT=10
# GOOGLE_DRIVE_FOLDER_ID=abcdef123456789
# GOOGLE_DRIVE_FOLDER_NAME=AI Email Summaries
# GOOGLE_DELEGATED_USER=delegate@yourdomain.com
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_BASE_URL=https://your-azure-openai-endpoint.openai.azure.com/
